:ruby
  format_xls do
    format 'tr', color: lambda { |row| 'ddffdd' if row.index.even? }
    format 'th', b: true
    default 'td.num', 100
  end
  format_xls 'table#two' do
    format 'td', color: Axlsx::Color.new(rgb: 'ffaaaa')
  end

%table
  %caption A worksheet
  %thead
    %tr
      %th Name
      %th Age
      %th Date
  %tbody
    %tr
      %td Gleb
      %td.num 20
      %td.date 27/05/1991
    %tr
      %td John
      %td.num
      %td.date

%table#two
  %caption Another worksheet
  %thead
    %tr
      %th Name
      %th Age
      %th Date
  %tbody
    %tr
      %td Alice
      %td.float 19.5
      %td.date 10/05/1991